{
  "name": "@tdd-buffet/react",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.2",
  "description": "React testing for tdd-buffet",
  "keywords": [
    "tdd",
    "react",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiGhTTraX/tdd-buffet.git",
    "directory": "packages/react"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "homepage": "https://github.com/NiGhTTraX/tdd-buffet/tree/master/packages/react",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "pnpm exec ts-node ../tdd-buffet/src/bin/index.ts test --config ../../tests/jest.config.js --coverage",
    "ts-node": "ts-node -O '{\"target\": \"es6\"}'",
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "dependencies": {
    "@testing-library/react": "~12.1.0",
    "@types/jquery": "~3.5.0",
    "jquery": "~3.6.0",
    "pretty-format": "~27.5.0"
  },
  "devDependencies": {
    "@types/react": "~17.0.0",
    "@types/react-dom": "~17.0.0",
    "@types/jest": "~27.4.0",
    "jest": "~27.5.0",
    "jest-react-mock": "~3.1.0",
    "react": "~17.0.0",
    "react-dom": "~17.0.0",
    "react-mock-component": "~3.0.0",
    "strip-ansi": "~6.0.0",
    "strong-mock": "~7.3.0",
    "typescript": "~4.6.0"
  }
}

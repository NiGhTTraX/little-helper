{
  "name": "@tdd-buffet/react",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.10.0-alpha.0",
  "description": "React testing for tdd-buffet",
  "keywords": [
    "tdd",
    "react",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiGhTTraX/tdd-buffet.git",
    "directory": "packages/react"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "homepage": "https://github.com/NiGhTTraX/tdd-buffet/tree/master/packages/react",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "GUI_COVERAGE=1 yarn run ts-node ../tdd-buffet/src/bin/index.ts test --config ../../tests/jest.config.js --coverage",
    "ts-node": "ts-node -O '{\"target\": \"es6\"}'",
    "pretest": "yarn run webpack",
    "build": "yarn run clean && yarn run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn run build && yarn run package",
    "package": "cp -r src/config dist/",
    "webpack": "COVERAGE=1 webpack --config ./src/config/webpack.config.js ./tests/coverage/webpack.ts -o ./tests/coverage/webpack-bundle.js"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "dependencies": {
    "@babel/core": "~7.9.0",
    "@testing-library/react": "~10.0.0",
    "@types/jquery": "~3.3.30",
    "babel-loader": "~8.1.0",
    "babel-plugin-istanbul": "~6.0.0",
    "css-loader": "~3.5.0",
    "fork-ts-checker-webpack-plugin": "~4.1.0",
    "jquery": "~3.5.0",
    "less": "~3.11.0",
    "less-loader": "~6.1.0",
    "mini-css-extract-plugin": "~0.9.0",
    "postcss-flexbugs-fixes": "~4.2.0",
    "postcss-loader": "~3.0.0",
    "postcss-normalize": "~9.0.0",
    "postcss-preset-env": "~6.7.0",
    "style-loader": "~1.2.0",
    "webpack": "~4.43.0"
  },
  "devDependencies": {
    "@types/react": "~16.9.0",
    "@types/react-dom": "~16.9.0",
    "jest-react-mock": "~1.0.1",
    "react": "~16.13.0",
    "react-dom": "~16.13.0",
    "react-mock-component": "~2.3.0",
    "strong-mock": "~4.1.1",
    "typescript": "~3.8.0",
    "webpack-cli": "~3.3.9"
  }
}

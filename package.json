{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "version": "lerna version --conventional-commits --no-push",
    "pub": "yarn run build && lerna publish from-git && yarn run clean",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "lerna run test",
    "pretest": "yarn run selenium",
    "ts-node": "ts-node -O '{\"target\": \"es6\"}'",
    "selenium": "yarn run ts-node packages/selenium/src/bin/index.ts start --port 4444 --retries 30",
    "selenium:debug": "yarn run ts-node packages/selenium/src/bin/index.ts debug --port 3333",
    "selenium:stop": "yarn run ts-node packages/selenium/src/bin/index.ts stop"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~3.0.0",
    "@typescript-eslint/eslint-plugin": "~2.11.0",
    "eslint": "~6.7.0",
    "eslint-config-prettier": "~6.7.0",
    "eslint-plugin-import": "~2.19.0",
    "eslint-plugin-prettier": "~3.1.1",
    "eslint-import-resolver-typescript": "~1.1.1",
    "eslint-plugin-jsx-a11y": "~6.2.3",
    "eslint-plugin-react": "~7.17.0",
    "husky": "~3.1.0",
    "lerna": "~3.19.0",
    "lint-staged": "~9.5.0",
    "prettier": "~1.19.0",
    "ts-node": "~8.5.0",
    "typescript": "~3.7.0"
  }
}

{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "yarn run build && lerna publish && yarn run clean",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "./tests/run.sh",
    "_test": "yarn run ts-node packages/tdd-buffet/src/bin/index.ts test --config tests/jest.config.js --coverage --runInBand",
    "ts-node": "ts-node -O '{\"target\": \"es6\"}'",
    "selenium": "yarn run ts-node packages/selenium/src/bin/index.ts start --port 4444 --retries 30",
    "selenium:debug": "yarn run ts-node packages/selenium/src/bin/index.ts debug --port 3333",
    "selenium:stop": "yarn run ts-node packages/selenium/src/bin/index.ts stop",
    "report-coverage": "codecov -f tests/results/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~3.0.0",
    "@typescript-eslint/eslint-plugin": "~2.3.0",
    "codecov": "~3.5.0",
    "eslint": "~6.4.0",
    "eslint-plugin-import": "~2.18.2",
    "eslint-import-resolver-typescript": "~1.1.1",
    "eslint-plugin-jsx-a11y": "~6.2.3",
    "eslint-plugin-react": "~7.14.2",
    "husky": "~3.0.0",
    "lerna": "~3.16.0",
    "lint-staged": "~9.2.0",
    "ts-node": "~8.4.0",
    "typescript": "~3.6.0"
  }
}

{
  "private": true,
  "scripts": {
    "_ts-node": "ts-node -O '{\"target\": \"es6\"}'",
    "_lint": "npm run _ts-node -- packages/tdd-buffet/src/bin/index.ts lint",
    "bootstrap": "lerna bootstrap --hoist",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "npm run build && lerna publish && npm run clean",
    "lint": "npm run _lint .",
    "test": "./tests/run.sh",
    "_test": "npm run _ts-node -- packages/tdd-buffet/src/bin/index.ts test --coverage",
    "selenium": "npm run _ts-node -- packages/selenium/src/bin/index.ts start --port 4444",
    "selenium:debug": "npm run _ts-node -- packages/selenium/src/bin/index.ts debug --port 3333",
    "selenium:stop": "npm run _ts-node -- packages/selenium/src/bin/index.ts stop",
    "report-coverage": "codecov -f tests/results/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "npm run _lint",
    "*.js": "npm run _lint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-ts": "~3.0.0",
    "codecov": "~3.5.0",
    "husky": "~3.0.0",
    "lerna": "~3.16.0",
    "lint-staged": "~9.2.0",
    "ts-node": "~8.3.0",
    "typescript": "~3.5.0"
  }
}

{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "version": "lerna version --conventional-commits --no-commit-hooks --create-release github",
    "pub": "yarn run build && lerna publish from-git && yarn run clean",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "lerna run test",
    "pretest": "yarn run selenium",
    "ts-node": "ts-node -O '{\"target\": \"es6\"}'",
    "selenium": "yarn run ts-node packages/selenium/src/bin/index.ts start --port 4444 --retries 30",
    "selenium:debug": "yarn run ts-node packages/selenium/src/bin/index.ts debug --port 3333",
    "selenium:stop": "yarn run ts-node packages/selenium/src/bin/index.ts stop"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "~8.3.4",
    "@commitlint/config-lerna-scopes": "~8.3.4",
    "@commitlint/cli": "~8.3.5",
    "@nighttrax/eslint-config-tsx": "~5.0.0-beta.1",
    "@typescript-eslint/eslint-plugin": "~2.23.0",
    "eslint": "~6.8.0",
    "eslint-plugin-import": "~2.20.0",
    "eslint-plugin-prettier": "~3.1.2",
    "eslint-import-resolver-typescript": "~2.0.0",
    "eslint-plugin-jsx-a11y": "~6.2.3",
    "eslint-plugin-react": "~7.19.0",
    "eslint-plugin-react-hooks": "~2.5.0",
    "husky": "~4.2.0",
    "lerna": "~3.20.0",
    "lint-staged": "~10.0.0",
    "prettier": "~2.0.0",
    "ts-node": "~8.8.0",
    "typescript": "~3.8.0"
  }
}
